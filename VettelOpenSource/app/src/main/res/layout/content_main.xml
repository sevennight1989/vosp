<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context="ll.opensource.MainActivity"
                                             tools:showIn="@layout/activity_main">

    <ll.opensource.view.TextLimitEditText
        android:id="@+id/tvLimit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="请输入"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ll.opensource.view.GradientRing
        android:id="@+id/gr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLimit"/>


    <Button
        android:id="@+id/startDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始下载"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gr"/>

    <ll.opensource.view.BorderTextView
        android:id="@+id/borderText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="我是带边框的"
        app:bottom_border="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startDownload"
        app:left_border="true"
        app:right_border="true"
        app:top_border="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDownload">

        <ll.opensource.view.BorderTextView
            android:id="@+id/tv1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="我是带边框的1"
            app:bottom_border="true"
            app:left_border="true"
            app:top_border="true" />

        <ll.opensource.view.BorderTextView
            android:id="@+id/tv2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="我是带边框的2"
            app:bottom_border="true"
            app:left_border="true"
            app:top_border="true" />

        <ll.opensource.view.BorderTextView
            android:id="@+id/tv3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="我是带边框的3"
            app:bottom_border="true"
            app:left_border="true"
            app:right_border="true"
            app:top_border="true" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
